{
  "version": 2,
  "buildCommand": "npx prisma generate",
  "builds": [
    {
      "src": "src/app.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["prisma/**/*", "src/docs/**/*"]
      }
    },
    {
      "src": "node_modules/swagger-ui-dist/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/v1/(.*)", "destination": "src/app.js" },
    { "source": "/api-docs", "destination": "src/app.js" },
    { "source": "/api-docs/(.*)", "destination": "src/app.js" }
  ],
  "routes": [
    {
      "src": "/swagger-ui-bundle.js",
      "dest": "node_modules/swagger-ui-dist/swagger-ui-bundle.js"
    },
    {
      "src": "/swagger-ui-standalone-preset.js",
      "dest": "node_modules/swagger-ui-dist/swagger-ui-standalone-preset.js"
    },
    {
      "src": "/swagger-ui.css",
      "dest": "node_modules/swagger-ui-dist/swagger-ui.css"
    },
    { "src": "/(.*)", "dest": "src/app.js" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,POST,PUT,DELETE,PATCH,OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
